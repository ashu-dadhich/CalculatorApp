<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ashu.calculator_app.MainActivity"
    android:background="#000"
    android:id="@+id/main_red_box"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:id="@+id/big_green_box"
        android:background="#000"
        android:layout_weight="3"
        android:layout_gravity="center">
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            style="@style/numerals"
            android:id="@+id/display"
            android:cursorVisible="false"/>
        <Button
            style="@style/numerals"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="X"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/big_blue_box"
        android:orientation="horizontal"
        android:background="#000"
        android:layout_weight="7"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="5.5"
            android:id="@+id/orange_box1"
            android:background="#000">
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Sin"
                android:layout_weight="1"
                style="@style/adv_function"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Cos"
                android:layout_weight="1"
                style="@style/adv_function"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="tan"
                android:layout_weight="1"
                style="@style/adv_function"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="π"
                android:layout_weight="1"
                style="@style/adv_function"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="!"
                android:layout_weight="1"
                style="@style/adv_function"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="5.5"
            android:id="@+id/orange_box2"
            android:background="#000"
            android:layout_marginRight="30dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="ln"
                android:layout_weight="1"
                style="@style/adv_function"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="log"
                android:layout_weight="1"
                style="@style/adv_function"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="e"
                android:layout_weight="1"
                style="@style/adv_function"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="^"
                android:layout_weight="1"
                style="@style/adv_function"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="√"
                android:layout_weight="1"
                style="@style/adv_function"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="21"
            android:id="@+id/black_box"
            android:background="#000">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:id="@+id/green_box1"
                android:background="#000">
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="7"
                    style="@style/numerals"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="8"
                    style="@style/numerals"/>
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="9"
                    style="@style/numerals"/>
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="/"
                    style="@style/basic_function"/>
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="("
                    style="@style/basic_function"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:id="@+id/green_box2"
                android:background="#000">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:layout_weight="1"
                    style="@style/numerals"/>
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="5"
                    style="@style/numerals"/>
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="6"
                    style="@style/numerals"/>
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="*"
                    style="@style/basic_function"/>
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=")"
                    style="@style/basic_function"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:id="@+id/blue_box"
                android:background="#000">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/red_box"
                    android:background="#000">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:background="#000"
                        android:id="@+id/green_box3">
                        <Button
                            android:layout_width="0dp"
                            android:id="@+id/one"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="1"
                            android:onClick="numerals"
                            style="@style/numerals"/>
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="2"
                            android:onClick="numerals"
                            android:id="@+id/two"
                            style="@style/numerals"/>
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="3"
                            style="@style/numerals"/>
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="-"
                            style="@style/basic_function"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:background="#000"
                        android:id="@+id/green_box4">
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:text="0"
                            style="@style/numerals"/>
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="."
                            style="@style/numerals"/>
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="+"
                            style="@style/basic_function"
                            android:id="@+id/sum"
                            android:onClick="basic_arithmetic"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:id="@+id/remaining_box"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="="
                        style="@style/basic_function"
                        android:id="@+id/equalsto"
                        android:onClick="result"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
